{
    "name": "hermione-mocks",
    "version": "0.1.0",
    "description": "Hermione plugin that allows you to mock HTTP requests. Works only with browsers that support the CDP protocol",
    "main": "./build/index.js",
    "types": "./build/index.d.ts",
    "files": [
        "build"
    ],
    "scripts": {
        "build": "tsc",
        "build-spec": "tsc --build tsconfig.spec.json",
        "build-dev": "tsc --allowUnreachableCode --allowUnusedLabels --noUnusedLocals --noUnusedParameters",
        "clean": "rimraf build/ build-spec/ *.tsbuildinfo",
        "prepack": "npm run clean && npm run build",
        "test": "npm run lint && npm run unit",
        "lint": "npm run eslint && npm run style",
        "reformat": "eslint src --ext .ts --fix && prettier --write 'src/**/*.ts' '**/*.json'",
        "style": "prettier --check 'src/**/*.ts' '**/*.json'",
        "eslint": "eslint src --ext .ts",
        "unit": "jest"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/gemini-testing/hermione-mocks.git"
    },
    "engines": {
        "node": ">= 12.0.0"
    },
    "keywords": [
        "hermione",
        "hermione-plugin",
        "dumps"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/gemini-testing/hermione-mocks/issues"
    },
    "homepage": "https://github.com/gemini-testing/hermione-mocks#readme",
    "devDependencies": {
        "@types/btoa": "^1.2.3",
        "@types/jest": "^27.0.1",
        "@types/lodash": "^4.14.172",
        "@types/node": "^12.20.19",
        "@typescript-eslint/eslint-plugin": "^4.29.3",
        "@typescript-eslint/parser": "^4.29.3",
        "eslint": "^7.32.0",
        "eslint-config-gemini-testing": "^3.0.0",
        "jest": "^27.0.6",
        "prettier": "^2.3.2",
        "puppeteer-core": "^13.7.0",
        "rimraf": "^3.0.2",
        "typescript": "^4.4.4"
    },
    "dependencies": {
        "btoa": "^1.2.1",
        "gemini-configparser": "^1.1.0",
        "lodash": "^4.17.21",
        "p-queue": "^6.6.2"
    },
    "peerDependencies": {
        "hermione": ">=4.0.0"
    }
}
